  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
  $(document).ready(function(){
      // Load departments dropdown
      $.ajax({
          url: "DepartmentServlet",
          method: "GET",
          success: function(data) {
              $(".drdrop").html(data);
          }
      });

      // Load doctors list based on selected department
      $(".drdrop").on("click", ".dropdown-item", function() {
          var departmentId = $(this).data("deptid");
          $.ajax({
        	  url: "DoctorServlet",
              method: "GET",
              data: { deptid: departmentId, patientID:"<%= request.getParameter("PatientID")%>" },
              success: function(data) {
                  $("#doctorList").html(data);
              }
          });
      });
   	
  });

  </script>
